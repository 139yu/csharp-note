<Window x:Class="DataBindStudy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBindStudy"
        xmlns:uiModels="clr-namespace:DataBindStudy.UIModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <uiModels:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="Aqua">
            <TextBox Text="{Binding VM01.Value01}" Height="20"></TextBox>
        </Border>
        <Border Grid.Row="1" Background="Bisque">
            <ListView ItemsSource="{Binding ListViewModel}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Background="Chartreuse" Margin="5,0"> 
                            <StackPanel Orientation="Horizontal">
                                <!--基于自身向上查找类型为Window的祖先元素，找到它的DataContext，沿着VM01.Value01获取值-->
                                <TextBox Text="{Binding Path=DataContext.VM01.Value01, 
                                RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=Window}}"/>
                                <TextBox Text="{Binding Value01}"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>
    </Grid>
</Window>
