<Window x:Class="ShapeControlStudy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShapeControlStudy"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="30">
        <Line X1="0" Y1="0" X2="{Binding RelativeSource={RelativeSource  Mode=FindAncestor,AncestorType=Window}, Path=ActualWidth}" Y2="100" Stroke="Blue" StrokeThickness="2"></Line>
        <Rectangle Height="80" Fill="Aquamarine" RadiusX="15" RadiusY="150"></Rectangle>    
        <Ellipse Height="20" Width="100" Fill="Brown"></Ellipse>
        <Polyline Points="0,0 30,15 50,12 50,50 60,100" Stroke="Chartreuse" StrokeThickness="2"></Polyline>
        <Polygon Points="0,0 30,15 50,20 60,30 100,100" Stroke="OrangeRed"  StrokeThickness="2"></Polygon>
    </StackPanel>
</Window>
