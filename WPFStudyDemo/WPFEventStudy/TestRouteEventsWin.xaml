<Window x:Class="WPFEventStudy.TestRouteEventsWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFEventStudy"
        mc:Ignorable="d"
        Title="TestRouteEventsWin" Height="450" Width="800">
    <Grid MouseLeftButtonDown="Grid_OnMouseLeftButtonDown" PreviewMouseLeftButtonDown="Grid_OnPreviewMouseLeftButtonDown">
        <StackPanel MouseLeftButtonDown="StackPanel_OnMouseLeftButtonDown" PreviewMouseLeftButtonDown="StackPanel_OnPreviewMouseLeftButtonDown">
            <Border Height="30" Background="Aqua" Width="100" MouseLeftButtonDown="Button_OnMouseLeftButtonDown" PreviewMouseLeftButtonDown="Border_OnPreviewMouseLeftButtonDown"></Border>
            <Button Content="Button"></Button>
            <local:CustomerSlider ValueChanged="CustomerSlider_OnValueChanged"></local:CustomerSlider>
        </StackPanel>
    </Grid>
</Window>
