<Window x:Class="AnimationStudy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnimationStudy"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Storyboard x:Key="sb">
            <DoubleAnimation 
                Duration="0:0:0.25"
                Storyboard.TargetName="bd" 
                Storyboard.TargetProperty="Width" 
                To="150"/>
        </Storyboard>
        <Storyboard x:Key="sb1">
            <DoubleAnimation 
                Storyboard.TargetName="bd"
                Storyboard.TargetProperty="Width"
                Duration="0:0:0.5" />
        </Storyboard>
    </Window.Resources>
    <Window.Triggers>
        <EventTrigger RoutedEvent="Button.Click" SourceName="bt">
            <BeginStoryboard Storyboard="{StaticResource sb}">
            </BeginStoryboard>
            <!-- <BeginStoryboard Storyboard="{StaticResource sb1}"></BeginStoryboard> -->
        </EventTrigger>
    </Window.Triggers>
    <StackPanel>
        <Border Background="CornflowerBlue" Height="30" Width="100" Name="bd"/>
        <Button Name="bt" Width="100" Height="30" Content="Click Me" Background="CadetBlue" Foreground="White" Margin="0, 10"></Button>
    </StackPanel>
</Window>
