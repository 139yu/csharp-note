<UserControl x:Class="SmarkParking.Client.Controls.Loading"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SmarkParking.Client.Controls"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <KeySpline x:Key="keySpline">0.11, 0.66, 0.86, 0.36</KeySpline>
        <Storyboard x:Key="LadingStoryboard">
            <DoubleAnimationUsingKeyFrames RepeatBehavior="Forever" Storyboard.TargetName="e1" Storyboard.TargetProperty="Opacity">
                <DiscreteDoubleKeyFrame Value="0" KeyTime="0:0:0"></DiscreteDoubleKeyFrame>
                <DiscreteDoubleKeyFrame Value="1" KeyTime="0:0:0.3"></DiscreteDoubleKeyFrame>
                <DiscreteDoubleKeyFrame Value="0" KeyTime="0:0:5"></DiscreteDoubleKeyFrame>
                <DiscreteDoubleKeyFrame Value="0" KeyTime="0:0:5.5"></DiscreteDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames RepeatBehavior="Forever" Storyboard.TargetName="rt1"
                                           Storyboard.TargetProperty="Angle">
                <SplineDoubleKeyFrame Value="0" KeyTime="0:0:0.3" KeySpline="{StaticResource keySpline}" />
                <SplineDoubleKeyFrame Value="360" KeyTime="0:0:2.5" KeySpline="{StaticResource keySpline}" />
                <SplineDoubleKeyFrame Value="720" KeyTime="0:0:5" KeySpline="{StaticResource keySpline}" />
                <DiscreteDoubleKeyFrame Value="720" KeyTime="0:0:5.5" />
            </DoubleAnimationUsingKeyFrames>

            <DoubleAnimationUsingKeyFrames RepeatBehavior="Forever" BeginTime="0:0:0.2" Storyboard.TargetName="e2" Storyboard.TargetProperty="Opacity">
                <DiscreteDoubleKeyFrame Value="0" KeyTime="0:0:0"></DiscreteDoubleKeyFrame>
                <DiscreteDoubleKeyFrame Value="1" KeyTime="0:0:0.3"></DiscreteDoubleKeyFrame>
                <DiscreteDoubleKeyFrame Value="0" KeyTime="0:0:5"></DiscreteDoubleKeyFrame>
                <DiscreteDoubleKeyFrame Value="0" KeyTime="0:0:5.5"></DiscreteDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames RepeatBehavior="Forever" Storyboard.TargetName="rt2"
                                           BeginTime="0:0:0.2"
                                           Storyboard.TargetProperty="Angle">
                <SplineDoubleKeyFrame Value="0" KeyTime="0:0:0.3" KeySpline="{StaticResource keySpline}" />
                <SplineDoubleKeyFrame Value="360" KeyTime="0:0:2.5" KeySpline="{StaticResource keySpline}" />
                <SplineDoubleKeyFrame Value="720" KeyTime="0:0:5" KeySpline="{StaticResource keySpline}" />
                <DiscreteDoubleKeyFrame Value="720" KeyTime="0:0:5.5" />
            </DoubleAnimationUsingKeyFrames>


            <DoubleAnimationUsingKeyFrames RepeatBehavior="Forever" BeginTime="0:0:0.4" Storyboard.TargetName="e3" Storyboard.TargetProperty="Opacity">
                <DiscreteDoubleKeyFrame Value="0" KeyTime="0:0:0"></DiscreteDoubleKeyFrame>
                <DiscreteDoubleKeyFrame Value="1" KeyTime="0:0:0.3"></DiscreteDoubleKeyFrame>
                <DiscreteDoubleKeyFrame Value="0" KeyTime="0:0:5"></DiscreteDoubleKeyFrame>
                <DiscreteDoubleKeyFrame Value="0" KeyTime="0:0:5.5"></DiscreteDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames RepeatBehavior="Forever" Storyboard.TargetName="rt3"
                                           BeginTime="0:0:0.4"
                                           Storyboard.TargetProperty="Angle">
                <SplineDoubleKeyFrame Value="0" KeyTime="0:0:0.3" KeySpline="{StaticResource keySpline}" />
                <SplineDoubleKeyFrame Value="360" KeyTime="0:0:2.5" KeySpline="{StaticResource keySpline}" />
                <SplineDoubleKeyFrame Value="720" KeyTime="0:0:5" KeySpline="{StaticResource keySpline}" />
                <DiscreteDoubleKeyFrame Value="720" KeyTime="0:0:5.5" />
            </DoubleAnimationUsingKeyFrames>


            <DoubleAnimationUsingKeyFrames RepeatBehavior="Forever" BeginTime="0:0:0.6" Storyboard.TargetName="e4" Storyboard.TargetProperty="Opacity">
                <DiscreteDoubleKeyFrame Value="0" KeyTime="0:0:0"></DiscreteDoubleKeyFrame>
                <DiscreteDoubleKeyFrame Value="1" KeyTime="0:0:0.3"></DiscreteDoubleKeyFrame>
                <DiscreteDoubleKeyFrame Value="0" KeyTime="0:0:5"></DiscreteDoubleKeyFrame>
                <DiscreteDoubleKeyFrame Value="0" KeyTime="0:0:5.5"></DiscreteDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames RepeatBehavior="Forever" Storyboard.TargetName="rt4"
                                           BeginTime="0:0:0.6"
                                           Storyboard.TargetProperty="Angle">
                <SplineDoubleKeyFrame Value="0" KeyTime="0:0:0.3" KeySpline="{StaticResource keySpline}" />
                <SplineDoubleKeyFrame Value="360" KeyTime="0:0:2.5" KeySpline="{StaticResource keySpline}" />
                <SplineDoubleKeyFrame Value="720" KeyTime="0:0:5" KeySpline="{StaticResource keySpline}" />
                <DiscreteDoubleKeyFrame Value="720" KeyTime="0:0:5.5" />
            </DoubleAnimationUsingKeyFrames>


            <DoubleAnimationUsingKeyFrames RepeatBehavior="Forever" BeginTime="0:0:0.6" Storyboard.TargetName="e5" Storyboard.TargetProperty="Opacity">
                <DiscreteDoubleKeyFrame Value="0" KeyTime="0:0:0"></DiscreteDoubleKeyFrame>
                <DiscreteDoubleKeyFrame Value="1" KeyTime="0:0:0.3"></DiscreteDoubleKeyFrame>
                <DiscreteDoubleKeyFrame Value="0" KeyTime="0:0:5"></DiscreteDoubleKeyFrame>
                <DiscreteDoubleKeyFrame Value="0" KeyTime="0:0:5.5"></DiscreteDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames RepeatBehavior="Forever" Storyboard.TargetName="rt5"
                                           BeginTime="0:0:0.8"
                                           Storyboard.TargetProperty="Angle">
                <SplineDoubleKeyFrame Value="0" KeyTime="0:0:0.3" KeySpline="{StaticResource keySpline}" />
                <SplineDoubleKeyFrame Value="360" KeyTime="0:0:2.5" KeySpline="{StaticResource keySpline}" />
                <SplineDoubleKeyFrame Value="720" KeyTime="0:0:5" KeySpline="{StaticResource keySpline}" />
                <DiscreteDoubleKeyFrame Value="720" KeyTime="0:0:5.5" />
            </DoubleAnimationUsingKeyFrames>


            <DoubleAnimationUsingKeyFrames RepeatBehavior="Forever" BeginTime="0:0:0.1" Storyboard.TargetName="e6" Storyboard.TargetProperty="Opacity">
                <DiscreteDoubleKeyFrame Value="0" KeyTime="0:0:0"></DiscreteDoubleKeyFrame>
                <DiscreteDoubleKeyFrame Value="1" KeyTime="0:0:0.3"></DiscreteDoubleKeyFrame>
                <DiscreteDoubleKeyFrame Value="0" KeyTime="0:0:5"></DiscreteDoubleKeyFrame>
                <DiscreteDoubleKeyFrame Value="0" KeyTime="0:0:5.5"></DiscreteDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames RepeatBehavior="Forever" Storyboard.TargetName="rt6"
                                           BeginTime="0:0:0.1"
                                           Storyboard.TargetProperty="Angle">
                <SplineDoubleKeyFrame Value="0" KeyTime="0:0:0.3" KeySpline="{StaticResource keySpline}" />
                <SplineDoubleKeyFrame Value="360" KeyTime="0:0:2.5" KeySpline="{StaticResource keySpline}" />
                <SplineDoubleKeyFrame Value="720" KeyTime="0:0:5" KeySpline="{StaticResource keySpline}" />
                <DiscreteDoubleKeyFrame Value="720" KeyTime="0:0:5.5" />
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </UserControl.Resources>
    <UserControl.Triggers>
        <EventTrigger RoutedEvent="UserControl.Loaded">
            <BeginStoryboard Storyboard="{StaticResource LadingStoryboard}"></BeginStoryboard>
        </EventTrigger>
    </UserControl.Triggers>

    <Grid Height="140">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Height="70" Width="70">
            <Border RenderTransformOrigin="0.5,0.5">
                <Border.RenderTransform>
                    <RotateTransform Angle="0" x:Name="rt1" />
                </Border.RenderTransform>
                <Ellipse Fill="Orange" Width="8" Height="8" VerticalAlignment="Bottom" Name="e1"></Ellipse>
            </Border>
            <Border RenderTransformOrigin="0.5,0.5">
                <Border.RenderTransform>
                    <RotateTransform Angle="0" x:Name="rt2" />
                </Border.RenderTransform>
                <Ellipse Fill="Orange" Width="8" Height="8" VerticalAlignment="Bottom" Name="e2"></Ellipse>
            </Border>
            <Border RenderTransformOrigin="0.5,0.5">
                <Border.RenderTransform>
                    <RotateTransform Angle="0" x:Name="rt3" />
                </Border.RenderTransform>
                <Ellipse Fill="Orange" Width="8" Height="8" VerticalAlignment="Bottom" Name="e3"></Ellipse>
            </Border>
            <Border RenderTransformOrigin="0.5,0.5">
                <Border.RenderTransform>
                    <RotateTransform Angle="0" x:Name="rt4" />
                </Border.RenderTransform>
                <Ellipse Fill="Orange" Width="8" Height="8" VerticalAlignment="Bottom" Name="e4"></Ellipse>
            </Border>
            <Border RenderTransformOrigin="0.5,0.5">
                <Border.RenderTransform>
                    <RotateTransform Angle="0" x:Name="rt5" />
                </Border.RenderTransform>
                <Ellipse Fill="Orange" Width="8" Height="8" VerticalAlignment="Bottom" Name="e5"></Ellipse>
            </Border>
            <Border RenderTransformOrigin="0.5,0.5">
                <Border.RenderTransform>
                    <RotateTransform Angle="0" x:Name="rt6" />
                </Border.RenderTransform>
                <Ellipse Fill="Orange" Width="8" Height="8" VerticalAlignment="Bottom" Name="e6"></Ellipse>
            </Border>

        </Grid>
        <TextBlock Grid.Row="1" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Center" 
                   Text="{Binding RelativeSource={RelativeSource AncestorType=local:Loading},Path=LoadingMessage}"></TextBlock>
    </Grid>
</UserControl>