<Window x:Class="SmartParking.Client.Start.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        xmlns:local="clr-namespace:SmartParking.Client.Start.ViewModels"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        FontFamily="Microsoft YaHei" FontWeight="ExtraLight" FontSize="16"
        Title="用户登录" Height="380" Width="580">
    <Window.Resources>
        <Style TargetType="TextBox" x:Key="UsernameBoxBorderStyle">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border Name="border" SnapsToDevicePixels="True" BorderThickness="0,0,0,1" Background="{TemplateBinding Background}" BorderBrush="#ccc">
                            <Grid>
                                <TextBlock Text="手机号/账号/邮箱" Visibility="Collapsed" Margin="2,0" FontSize="16" Foreground="#ccc" Name="markText"/>
                                <ScrollViewer 
                                    x:Name="PART_ContentHost" 
                                    Focusable="False" 
                                    MinHeight="20"
                                    HorizontalScrollBarVisibility="Hidden" 
                                    VerticalScrollBarVisibility="Hidden" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#0b3d90" TargetName="border"></Setter>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#0b3d90" TargetName="border"></Setter>
                            </Trigger>
                            <DataTrigger Binding="{Binding Path=Text, RelativeSource={RelativeSource Self}}" Value="">
                                <Setter TargetName="markText" Property="Visibility" Value="Visible"></Setter>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="PasswordBox" x:Key="PasswordBoxBorderStyle">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type PasswordBox}">
                        <Border Name="border" BorderThickness="0,0,0,1" SnapsToDevicePixels="True" BorderBrush="#ccc">
                            <Grid>
                                <TextBlock Name="markBox" Foreground="#ccc" Text="请输入密码"/>
                                <ScrollViewer VerticalScrollBarVisibility="Hidden" 
                                              x:Name="PART_ContentHost"
                                              Focusable="False"
                                              MinHeight="20"
                                              HorizontalScrollBarVisibility="Hidden"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#0b3d90"></Setter>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#0b3d90"></Setter>
                            </Trigger>
                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self},Path=Password}"></DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.Background>
                <ImageBrush ImageSource="pack://application:,,,/SmartParking.Client.Assets;component/Images/login_back.jpg"/>
            </Grid.Background>
        </Grid>
        <Grid Grid.Column="1" Margin="30,0" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" 
                       FontSize="20"
                       Margin="0,0,0,10"
                       Foreground="#0b3d90"
                       FontWeight="Normal"
                       Text="用户登录"/>
            <TextBlock Grid.Row="1" 
                       FontWeight="Normal"
                       Foreground="#0b3d90"
                       Margin="0,10,0,5" Text="账号"/>
            <TextBox Text="{Binding LoginModel.Username,UpdateSourceTrigger=PropertyChanged}" Grid.Row="2" Height="26" 
                     Style="{StaticResource UsernameBoxBorderStyle}" />
            <TextBlock Grid.Row="3" 
                       FontWeight="Normal"
                       Foreground="#0b3d90"
                       Margin="0,10,0,5" Text="密码"/>
            <PasswordBox Grid.Row="4"
                         Style="{StaticResource PasswordBoxBorderStyle}" Height="26" Margin="0,0,0,10"/>
            <Button Grid.Row="5" 
                    FontWeight="Normal" 
                    Foreground="#fff"
                    Margin="0,0,0,5"
                    Background="Orange"
                    Content="登  录"></Button>
            <CheckBox Grid.Row="6" Content="找回密码" HorizontalAlignment="Left"/>
            <TextBlock Grid.Row="6" HorizontalAlignment="Right">
                <Hyperlink>找回密码</Hyperlink>
            </TextBlock>
        </Grid>
        <TextBlock Grid.Column="1" 
                   VerticalAlignment="Bottom"
                   Margin="30,5"
                   TextAlignment="Center"
                   TextWrapping="Wrap"
                   Foreground="Red"
                   Text="登录失败，用户名或密码错误，用户名或密码错误"/>
    </Grid>
</Window>
