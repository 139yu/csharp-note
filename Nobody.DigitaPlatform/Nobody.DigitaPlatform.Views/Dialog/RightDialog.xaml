<Window x:Class="Nobody.DigitaPlatform.Views.Dialog.RightDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nobody.DigitaPlatform.Views.Dialog"
        mc:Ignorable="d" Background="Transparent"
        WindowStyle="None" WindowStartupLocation="CenterScreen" AllowsTransparency="True"
        Title="消息" Height="250" Width="320">
    <Window.Resources>
        <ResourceDictionary Source="pack://application:,,,/Nobody.DigitaPlatform.Assets;component/Styles/ButtonStyle.xaml"></ResourceDictionary>
    </Window.Resources>
    <Grid Background="Transparent">
        <Grid.Effect>
            <DropShadowEffect ShadowDepth="0" BlurRadius="15" Opacity="0.2" Color="Gray"/>
        </Grid.Effect>
        <Rectangle Width="300" Height="200" RadiusX="30" RadiusY="20" Stroke="#fff" Fill="#DDF7F9FA" Margin="0,30,0,0"/>
        <Image Width="100" VerticalAlignment="Top" Margin="5" Source="pack://application:,,,/Nobody.DigitaPlatform.Assets;component/Images/right.png">
            <Image.Effect>
                <DropShadowEffect ShadowDepth="0" Direction="270" BlurRadius="15" Opacity="0.2" Color="Gray"/>
            </Image.Effect>
        </Image>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="30,30,30,0">
            <TextBlock Text="当前登录用户无法使用此功能" HorizontalAlignment="Center" FontSize="16" LineHeight="40" Foreground="#555"/>
            <TextBlock TextWrapping="Wrap" FontSize="14" LineHeight="24" Foreground="#888" TextAlignment="Center">
                <Run Text="建议退出系统，切换[技术员]或者[管理员]账号"/>
                <Hyperlink TextDecorations="None" Click="ReLogin">重新登录</Hyperlink>
                <Run Text="后继续操作"/>
            </TextBlock>
        </StackPanel> 
        <Button HorizontalAlignment="Center" Click="ButtonBase_OnClick" 
                Style="{StaticResource PrimaryButton}" Content="确定" VerticalAlignment="Bottom" Margin="0,0,0,20"/>
    </Grid>
</Window>
