<Window x:Class="Nobody.DigitaPlatform.Views.Dialog.TrendAxisEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nobody.DigitaPlatform.Views.Dialog"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        xmlns:converter="clr-namespace:Nobody.DigitaPlatform.Common.Converter;assembly=Nobody.DigitaPlatform.Common"
        xmlns:system="clr-namespace:System;assembly=System.Runtime"
        ResizeMode="NoResize" FontWeight="ExtraLight" FontSize="12" FontFamily="Microsoft YaHei"
        Title="变量报警条件配置" Height="400" Width="650">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="1" />
    </WindowChrome.WindowChrome>
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="pack://application:,,,/Nobody.DigitaPlatform.Assets;component/Styles/ButtonStyle.xaml" />
                <ResourceDictionary
                    Source="pack://application:,,,/Nobody.DigitaPlatform.Assets;component/Styles/ComboxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converter:RowNumberConverter x:Key="rnc" />
            <Style TargetType="TextBox" x:Key="defaultTextBoxStyle">
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TextBox">
                            <Border BorderBrush="#EEE" BorderThickness="1" CornerRadius="3" MinHeight="26"
                                    Background="White" Name="bor">
                                <ScrollViewer Name="PART_ContentHost" Margin="0" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsKeyboardFocused" Value="True">
                                    <Setter TargetName="bor" Property="BorderBrush" Value="#16a1ff" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style TargetType="TextBox" x:Key="EditTextBoxStyle">
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TextBox">
                            <Border BorderBrush="#EEE" BorderThickness="0" CornerRadius="3" MinHeight="26"
                                    Background="Transparent" Name="bor">
                                <ScrollViewer Name="PART_ContentHost" Margin="0" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsKeyboardFocused" Value="True">
                                    <Setter TargetName="bor" Property="BorderBrush" Value="#16a1ff" />
                                    <Setter TargetName="bor" Property="Background" Value="#FFF" />
                                    <Setter TargetName="bor" Property="BorderThickness" Value="1" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style TargetType="ToggleButton" x:Key="ShowSectionButtonStyle">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ToggleButton">
                            <Border>
                                <TextBlock Foreground="#666" TextTrimming="CharacterEllipsis"
                                           Text="{TemplateBinding Content}" />
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" FontSize="16" Foreground="#888" Margin="10,0,0,0" VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   Text="{Binding Trend.TrendHeader,StringFormat={}{0}-纵轴配置}" />
        <Button Grid.Row="0" VerticalAlignment="Top" FontFamily="{StaticResource Iconfont}" Content="&#xeca0;"
                HorizontalAlignment="Right" WindowChrome.IsHitTestVisibleInChrome="True" Click="ButtonBase_OnClick"
                Style="{StaticResource WindowControlButtonStyle}" />
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Border Background="#9FFF" Grid.Row="1"/>
            <Grid Grid.Row="0" Background="#409EFE" TextBlock.Foreground="#fff">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="110" />
                    <ColumnDefinition Width="40" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="序号" VerticalAlignment="Center" HorizontalAlignment="Center" />
                <TextBlock Text="纵轴基本信息" Grid.Column="1"
                           VerticalAlignment="Center" HorizontalAlignment="Center" />
                <TextBlock Text="间隔线" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" />
                <TextBlock Text="预警线" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Center" />
                <TextBlock Text="操作" Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Center" />
            </Grid>
            <ItemsControl Grid.Row="1" Name="ic" ItemsSource="{Binding Trend.AxisList}" AlternationCount="1000">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30" />
                                <ColumnDefinition />
                                <ColumnDefinition Width="50" />
                                <ColumnDefinition Width="110" />
                                <ColumnDefinition Width="40" />
                            </Grid.ColumnDefinitions>
                            <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="5" BorderBrush="#ddd"
                                    VerticalAlignment="Bottom" BorderThickness="0,0,0,01" />
                            <TextBlock Grid.Column="0"
                                       Text="{Binding RelativeSource={RelativeSource AncestorType=ContentPresenter},Path=(ItemsControl.AlternationIndex),Converter={StaticResource rnc}}"
                                       VerticalAlignment="Center" HorizontalAlignment="Center" />
                            <!--纵轴基本信息-->
                            <TextBlock Text="纵轴名称/显示：" Grid.Column="1" VerticalAlignment="Center"
                                       HorizontalAlignment="Left" Margin="5,0" />
                            <TextBox Grid.Column="1" Text="{Binding Title}"
                                     Style="{StaticResource defaultTextBoxStyle}" Margin="90,0,0,0"
                                     VerticalAlignment="Center">
                            </TextBox>
                            <CheckBox Grid.Column="1" IsChecked="{Binding IsShowTitle}" VerticalAlignment="Center"
                                      HorizontalAlignment="Right" />
                            <CheckBox Grid.Column="2" IsChecked="{Binding IsShowSeperator}" Grid.RowSpan="2"
                                      VerticalAlignment="Center" HorizontalAlignment="Center" />
                            <TextBlock Grid.RowSpan="2" Grid.Column="3" VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Text="" />
                            <ToggleButton Name="tb" Style="{StaticResource ShowSectionButtonStyle}"
                                          Content="{Binding SectionValues}" Grid.RowSpan="2" Grid.Column="3"
                                          VerticalAlignment="Center" HorizontalAlignment="Center" />
                            <TextBlock Grid.RowSpan="2" Grid.Column="4" VerticalAlignment="Center"
                                       HorizontalAlignment="Center">
                                <Hyperlink CommandParameter="{Binding }"
                                           Command="{Binding ElementName=ic,Path=DataContext.Trend.DelYAxisCommand}"
                                           FontFamily="{StaticResource Iconfont}" TextDecorations="None">
                                    &#xeca0;
                                </Hyperlink>
                            </TextBlock>
                            <!--更多纵轴信息-->
                            <Grid Grid.Row="1" Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="45" />
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="42" />
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="55" />
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="55" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="最小值" Grid.Column="0" Grid.Row="1" VerticalAlignment="Center"
                                           Margin="5,0,0,0" />
                                <TextBox Text="{Binding Minimum}" Grid.Column="1" Grid.Row="1" Margin="1,2"
                                         HorizontalContentAlignment="Center"
                                         Style="{StaticResource EditTextBoxStyle}" />
                                <TextBlock Text="最大值" Grid.Column="2" Grid.Row="1" VerticalAlignment="Center"
                                           Margin="2,0" />
                                <TextBox Text="{Binding Maximum}" Grid.Column="3" Grid.Row="1" Margin="1,2"
                                         HorizontalContentAlignment="Center"
                                         Style="{StaticResource EditTextBoxStyle}" />

                                <TextBlock Text="呈现位置" Grid.Column="4" Grid.Row="1" VerticalAlignment="Center"
                                           Margin="2,0" />
                                <ComboBox SelectedValue="{Binding Position}" Grid.Column="5" Margin="1,2"
                                          Style="{StaticResource PropSelectorStyle}" Grid.Row="1" BorderThickness="0">
                                    <ComboBox.ItemsSource>
                                        <x:Array Type="system:String">
                                            <system:String>Left</system:String>
                                            <system:String>Right</system:String>
                                        </x:Array>
                                    </ComboBox.ItemsSource>
                                </ComboBox>

                                <TextBlock Text="标签格式" Grid.Column="6" Grid.Row="1" Margin="2,0"
                                           VerticalAlignment="Center" />
                                <TextBox Text="{Binding LabelFormater}" Grid.Column="7" Grid.Row="1" Margin="1,2"
                                         HorizontalContentAlignment="Center"
                                         Style="{StaticResource EditTextBoxStyle}" />
                            </Grid>
                            <Popup
                                   AllowsTransparency="True" Placement="Bottom"
                                   PlacementTarget="{Binding ElementName=tb}"
                                   IsOpen="{Binding ElementName=tb,Path=IsChecked}" StaysOpen="False">
                                <Border Margin="5" Width="180" MaxHeight="400" Background="#DFFF" CornerRadius="5">
                                    <Border.Effect>
                                        <DropShadowEffect Color="Gray" ShadowDepth="0" BlurRadius="10" Opacity="0.2" />
                                    </Border.Effect>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="30" />
                                            <RowDefinition />
                                            <RowDefinition Height="35" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="1.5*" />
                                            <ColumnDefinition Width="40" />
                                        </Grid.ColumnDefinitions>
                                        <Border Background="White" CornerRadius="5,5,0,0" Grid.ColumnSpan="3" />
                                        <TextBlock Text="预警值" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                        <TextBlock Text="颜色" VerticalAlignment="Center" HorizontalAlignment="Center"
                                                   Grid.Column="1" />
                                        <TextBlock Text="操作" VerticalAlignment="Center" HorizontalAlignment="Center"
                                                   Grid.Column="2" />


                                        <Button
                                            Command="{Binding DataContext.AddSectionCommand,RelativeSource={RelativeSource AncestorType=Popup}}"
                                            Content="添加预警线" Grid.Row="2" Grid.ColumnSpan="3" Margin="4"
                                            Style="{StaticResource PrimaryButton}" Background="#409EFE" />


                                        <ItemsControl Grid.ColumnSpan="3" Grid.Row="1" ItemsSource="{Binding Sections}"
                                                      Margin="3,0">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition />
                                                            <ColumnDefinition Width="1.5*" />
                                                            <ColumnDefinition Width="40" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBox Style="{StaticResource defaultTextBoxStyle}" Text="{Binding Value}" TextAlignment="Center" />

                                                        <ComboBox SelectedValue="{Binding Color}" Grid.Column="1"
                                                                  ItemsSource="{Binding DataContext.BrushList,
                            RelativeSource={RelativeSource AncestorType=Window}}"
                                                                  Style="{StaticResource PropSelectorStyle}"
                                                                  SelectedValuePath=".">
                                                            <ComboBox.ItemTemplate>
                                                                <DataTemplate>
                                                                    <Grid Height="22">
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="20" />
                                                                            <ColumnDefinition />
                                                                        </Grid.ColumnDefinitions>
                                                                        <Border Background="{Binding}" Width="12"
                                                                            Height="12" />
                                                                        <TextBlock Text="{Binding}" Grid.Column="1"
                                                                            VerticalAlignment="Center" Margin="3,0"
                                                                            TextTrimming="CharacterEllipsis" />
                                                                    </Grid>
                                                                </DataTemplate>
                                                            </ComboBox.ItemTemplate>
                                                        </ComboBox>

                                                        <TextBlock Grid.Column="4" Grid.RowSpan="2"
                                                                   FontFamily="{StaticResource Iconfont}"
                                                                   VerticalAlignment="Center"
                                                                   HorizontalAlignment="Center">
                                                            <Hyperlink TextDecorations="None"
                                                                       CommandParameter="{Binding}"
                                                                       Command="{Binding DataContext.DeleteSectionCommand,RelativeSource={RelativeSource AncestorType=Popup}}">
                                                                &#xeca0;
                                                            </Hyperlink>
                                                        </TextBlock>
                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Grid>
                                </Border>
                            </Popup>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
        <Button Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center"
                Command="{Binding Trend.AddYAxisCommand}"
                Style="{StaticResource WarringButton}" Content="添加纵轴" />
    </Grid>
</Window>