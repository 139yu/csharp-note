<Window x:Class="Nobody.DigitaPlatform.Views.Dialog.VariableAlarmConditionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nobody.DigitaPlatform.Views.Dialog"
        xmlns:converter="clr-namespace:Nobody.DigitaPlatform.Common.Converter;assembly=Nobody.DigitaPlatform.Common"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        FontFamily="Microsoft YaHei" FontWeight="ExtraLight" FontSize="12"
        WindowStartupLocation="CenterScreen"
        Title="变量报警条件配置" Height="400" Width="600">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="pack://application:,,,/Nobody.DigitaPlatform.Assets;component/Styles/ButtonStyle.xaml" />
                <ResourceDictionary
                    Source="pack://application:,,,/Nobody.DigitaPlatform.Assets;component/Styles/ComboxStyle.xaml" />
                <ResourceDictionary>
                    <converter:RowNumberConverter x:Key="rnc" />
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="1" />
    </WindowChrome.WindowChrome>
    <Grid Background="#F7F9FA">
        <Grid.Resources>
            <ResourceDictionary>
                <Style TargetType="TextBox">
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TextBox">
                                <Border BorderBrush="#EEE" BorderThickness="1" CornerRadius="3" 
                                        MinHeight="26" Background="White" Name="bor">
                                    <ScrollViewer Name="PART_ContentHost" Margin="0"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsKeyboardFocused" Value="True">
                                        <Setter TargetName="bor" Property="BorderBrush" Value="#16a1ff"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ResourceDictionary>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <!--第一列-->
        <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" Background="#AA409EFE" />
        <Border Height="24" Background="#99FFFFFF" CornerRadius="12"
                Margin="10,0" WindowChrome.IsHitTestVisibleInChrome="True">
            <TextBox BorderThickness="0" Text="40001" Background="Transparent"
                     VerticalContentAlignment="Center" Style="{x:Null}"
                     Margin="15,0,30,0" Foreground="#888"
                      VerticalAlignment="Center" />
        </Border>
        <TextBlock Grid.Row="0" Grid.Column="0"
                   VerticalAlignment="Center" HorizontalAlignment="Right"
                   FontSize="20"
                   Margin="0,0,15,0"
                   FontFamily="{StaticResource Iconfont}" Text="&#xe647;" />
        <ScrollViewer Grid.Column="0" Grid.Row="1" Grid.RowSpan="2" VerticalScrollBarVisibility="Hidden">
            <ListBox Background="Transparent" BorderThickness="0" Name="lb"
                     SelectedIndex="0" ItemsSource="{Binding DeviceVariables}">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border Padding="10,5" Background="Transparent" Name="border"
                                            BorderBrush="Transparent"
                                            BorderThickness="1,0,0,0" TextBlock.Foreground="#fff">
                                        <ContentPresenter />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#fff" />
                                            <Setter TargetName="border" Property="TextBlock.Foreground"
                                                    Value="#AA409EFE">
                                            </Setter>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Column="0" Grid.Row="0" Text="{Binding VarName}" Margin="0,0,0,5" />
                            <TextBlock Grid.Column="0" Grid.Row="1" Text="{Binding VarAddress}" />
                            <TextBlock Grid.Column="1" Grid.Row="0" Grid.RowSpan="2"
                                       Text="{Binding VarType}"
                                       VerticalAlignment="Center" HorizontalAlignment="Right">
                            </TextBlock>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>
        <!--第二列-->
        <TextBlock Grid.Column="1" Grid.Row="0"
                   Margin="15,0,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center" FontSize="16" Foreground="#bbb"
                   Text="{Binding Header,StringFormat= {}{0}-变量报警条件配置}" />
        <Button Grid.Column="1" Grid.Row="0" FontSize="16"
                VerticalAlignment="Top" WindowChrome.IsHitTestVisibleInChrome="True"
                Click="ButtonBase_OnClick"
                HorizontalAlignment="Right" Content="&#xeca0;" FontFamily="{StaticResource Iconfont}"
                Style="{StaticResource WindowControlButtonStyle}" />
        <Grid Grid.Row="1" Grid.Column="1" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="20" />
                <RowDefinition Height="25" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="{Binding ElementName=lb,Path=SelectedItem.VarName}" />
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30" />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition Width="2.5*" />
                    <ColumnDefinition Width="30" />
                </Grid.ColumnDefinitions>
                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Text="序号" Grid.Column="0"
                           Grid.Row="1" />
                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Text="预警条件" Grid.Column="1"
                           Grid.Row="1" />
                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Text="预警值" Grid.Column="2"
                           Grid.Row="1" />
                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Text="提示内容信息" Grid.Column="3"
                           Grid.Row="1" />
                <TextBlock HorizontalAlignment="Center" Text="操作" Grid.Column="4" Grid.Row="1" />
                <Border Grid.Column="0" Grid.ColumnSpan="5" VerticalAlignment="Bottom"
                        BorderThickness="0,0,0,1" BorderBrush="#ccc">
                </Border>
            </Grid>
            <ItemsControl Grid.Row="2" AlternationCount="1000" Margin="0,5,0,0"
                          ItemsSource="{Binding ElementName=lb,Path=SelectedItem.AlarmConditions}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30" />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition Width="2.5*" />
                                <ColumnDefinition Width="30" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       VerticalAlignment="Center"
                                       Text="{Binding RelativeSource={RelativeSource  AncestorType=ContentPresenter},
                                Converter={StaticResource rnc},StringFormat={}{0:00},
                                Path=(ItemsControl.AlternationIndex)}" />
                            <ComboBox Grid.Column="1"
                                      DisplayMemberPath="Header"
                                      SelectedValuePath="Value"
                                      SelectedIndex="0"
                                      SelectedValue="{Binding Condition}"
                                      ItemsSource="{Binding Source={ StaticResource Locator},Path=AlarmConditionViewModel.Operators}"
                                      Style="{StaticResource PropSelectorStyle}" />
                            <TextBox Grid.Column="2" MinWidth="50" Text="{Binding AlarmValue}" HorizontalAlignment="Center"
                                     VerticalAlignment="Center" />
                            <TextBox Grid.Column="3" Text="{Binding AlarmMessage}" VerticalAlignment="Center" />
                            <TextBlock Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Hyperlink TextDecorations="None" FontFamily="{StaticResource Iconfont}"
                                           CommandParameter="{Binding}"
                                           Command="{Binding RemoveConditionCommand}">
                                    &#xeca0;
                                </Hyperlink>
                            </TextBlock>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
        <Button Grid.Column="1" Margin="0,0,20,0"
                Grid.Row="2"
                Command="{Binding ElementName=lb,Path=SelectedItem.AddConditionCommand}"
                VerticalContentAlignment="Center"
                Style="{StaticResource WarringButton}"
                HorizontalAlignment="Right">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Margin="0,0,3,0" Text="&#xe607;"
                           VerticalAlignment="Center" FontFamily="{StaticResource Iconfont}" />
                <TextBlock VerticalAlignment="Center" Text="添加预警条件" />
            </StackPanel>
        </Button>
    </Grid>
</Window>