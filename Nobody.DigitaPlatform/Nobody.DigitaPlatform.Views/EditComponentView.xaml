<Window x:Class="Nobody.DigitaPlatform.Views.EditComponentView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nobody.DigitaPlatform.Views"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:converter="clr-namespace:Nobody.DigitaPlatform.Common.Converter;assembly=Nobody.DigitaPlatform.Common"
        xmlns:sys="clr-namespace:System;assembly=System.Runtime"
        mc:Ignorable="d"
        Name="win" 
        ResizeMode="NoResize"
        FontFamily="Microsoft YaHei" FontWeight="ExtraLight" FontSize="11"
        DataContext="{Binding Source={StaticResource Locator},Path=EditComponentViewModel}"
        WindowStartupLocation="CenterOwner"
        Title="设备组态编辑" Height="650" Width="1200">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#DCEDfa" Offset="0" />
            <GradientStop Color="#F7F9FA" Offset="0.1" />
            <GradientStop Color="#F7F9FA" Offset="1" />
        </LinearGradientBrush>
    </Window.Background>
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="-1" />
    </WindowChrome.WindowChrome>
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="pack://application:,,,/Nobody.DigitaPlatform.Assets;component/Styles/ButtonStyle.xaml" />
                <ResourceDictionary
                    Source="pack://application:,,,/Nobody.DigitaPlatform.Assets;component/Styles/ComboxStyle.xaml" />
                <ResourceDictionary>
                    <converter:DeviceConverter x:Key="DeviceConverter" />
                    <BooleanToVisibilityConverter x:Key="b2v" />
                    <Style TargetType="Button" x:Key="ButtonStyle">
                        <Setter Property="Background" Value="#ccc"></Setter>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="Transparent" Name="wrapper">
                                        <Border
                                            CornerRadius="{Binding 
                                            Path=Tag,
                                            RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                            Name="border">
                                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" />
                                        </Border>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#3000" />
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#6000"></Setter>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                    <Style TargetType="ToggleButton" x:Key="ManualToggleButtonStyle">
                        <Setter Property="Foreground" Value="#666"></Setter>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ToggleButton">
                                    <Border Name="br" Padding="5,2" Background="Transparent">
                                        <ContentPresenter
                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="br" Property="Background" Value="#2000"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <VisualStateManager.VisualStateGroups>
        <VisualStateGroup>
            <VisualState Name="SaveSuccess">
                <Storyboard>
                    <!--处理位置-->
                    <ThicknessAnimationUsingKeyFrames Storyboard.TargetName="successBox"
                                                      Storyboard.TargetProperty="Margin">
                        <LinearThicknessKeyFrame Value="0,-80,0,0" KeyTime="0:0:0" />
                        <LinearThicknessKeyFrame Value="0,20,0,0" KeyTime="0:0:0.3" />
                        <LinearThicknessKeyFrame Value="0,20,0,0" KeyTime="0:0:3.3" />
                        <LinearThicknessKeyFrame Value="0,-80,0,0" KeyTime="0:0:4" />
                    </ThicknessAnimationUsingKeyFrames>

                    <DoubleAnimationUsingKeyFrames Storyboard.TargetName="successBox"
                                                   Storyboard.TargetProperty="Opacity">
                        <LinearDoubleKeyFrame Value="0" KeyTime="0:0:0" />
                        <LinearDoubleKeyFrame Value="1" KeyTime="0:0:0.5" />
                        <LinearDoubleKeyFrame Value="1" KeyTime="0:0:3.5" />
                        <LinearDoubleKeyFrame Value="0" KeyTime="0:0:4" />
                    </DoubleAnimationUsingKeyFrames>
                </Storyboard>
            </VisualState>
            <VisualState x:Name="NormalSuccess" />
        </VisualStateGroup>

        <VisualStateGroup>
            <VisualState Name="SaveFailedShow">
                <Storyboard>
                    <ThicknessAnimationUsingKeyFrames Storyboard.TargetName="failedBox"
                                                      Storyboard.TargetProperty="Margin">
                        <LinearThicknessKeyFrame Value="0,-80,0,0" KeyTime="0:0:0" />
                        <LinearThicknessKeyFrame Value="0,20,0,0" KeyTime="0:0:0.3" />
                    </ThicknessAnimationUsingKeyFrames>
                    <DoubleAnimationUsingKeyFrames Storyboard.TargetName="failedBox"
                                                   Storyboard.TargetProperty="Opacity">
                        <LinearDoubleKeyFrame Value="0" KeyTime="0:0:0" />
                        <LinearDoubleKeyFrame Value="1" KeyTime="0:0:0.5" />
                    </DoubleAnimationUsingKeyFrames>
                </Storyboard>
            </VisualState>
            <VisualState Name="SaveFailedClose">
                <Storyboard>
                    <ThicknessAnimationUsingKeyFrames Storyboard.TargetName="failedBox"
                                                      Storyboard.TargetProperty="Margin">
                        <LinearThicknessKeyFrame Value="0,20,0,0" KeyTime="0:0:0" />
                        <LinearThicknessKeyFrame Value="0,-80,0,0" KeyTime="0:0:0.3" />
                    </ThicknessAnimationUsingKeyFrames>
                    <DoubleAnimationUsingKeyFrames Storyboard.TargetName="failedBox"
                                                   Storyboard.TargetProperty="Opacity">
                        <LinearDoubleKeyFrame Value="1" KeyTime="0:0:0" />
                        <LinearDoubleKeyFrame Value="0" KeyTime="0:0:0.3" />
                    </DoubleAnimationUsingKeyFrames>
                </Storyboard>
            </VisualState>
            <VisualState Name="SaveFailedNormal" />
        </VisualStateGroup>
    </VisualStateManager.VisualStateGroups>
    <Grid>
        <Grid.Resources>
            <ResourceDictionary>
                <Style TargetType="ToggleButton" x:Key="ExpanderButtonStyle">
                    <Setter Property="Foreground" Value="#fff" />
                    <Setter Property="FontSize" Value="16"></Setter>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ToggleButton">
                                <Border CornerRadius="5">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#996364f8" Offset="0" />
                                            <GradientStop Color="#553F40C8" Offset="1" />
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="30" />
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left"
                                                    VerticalAlignment="Center">
                                            <Border Width="5"
                                                    Height="15"
                                                    VerticalAlignment="Center"
                                                    CornerRadius="3"
                                                    Margin="5,0,8,0"
                                                    Background="#FFB1C867" />
                                            <ContentPresenter VerticalAlignment="Center" />
                                        </StackPanel>
                                        <TextBlock Grid.Column="1"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   RenderTransformOrigin="0.5,0.5"
                                                   Name="arrow"
                                                   FontFamily="{StaticResource Iconfont}" Text="&#xe610;" />
                                    </Grid>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter TargetName="arrow" Property="RenderTransform">
                                            <Setter.Value>
                                                <RotateTransform Angle="180"></RotateTransform>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
                <Style TargetType="Expander">
                    <Setter Property="Margin" Value="0,3" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Expander">
                                <Border x:Name="Content" BorderThickness="1,0,1,1" CornerRadius="5">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#11000000" Offset="0" />
                                            <GradientStop Color="Transparent" Offset="1" />
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="35" />
                                            <RowDefinition x:Name="contentRow" Height="0" />
                                        </Grid.RowDefinitions>
                                        <ToggleButton Grid.Row="0"
                                                      Name="content"
                                                      Style="{StaticResource ExpanderButtonStyle}"
                                                      IsChecked="{Binding RelativeSource={RelativeSource Mode=TemplatedParent},
Path=IsExpanded,Mode=TwoWay }"
                                                      Content="{TemplateBinding Header}" />
                                        <ContentPresenter Grid.Row="1" Margin="4" />
                                    </Grid>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsExpanded" Value="True">
                                        <Setter TargetName="contentRow"
                                                Property="Height"
                                                Value="{Binding ElementName=content,Path=Height}" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
                <Style TargetType="TextBox">
                    <Setter Property="VerticalContentAlignment" Value="Center" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TextBox">
                                <Border CornerRadius="5" BorderThickness="1" MinHeight="26"
                                        Background="#fff"
                                        BorderBrush="#eee">
                                    <ScrollViewer Name="PART_ContentHost"></ScrollViewer>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
                <Style TargetType="ToggleButton" x:Key="MorePointButtonStyle">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ToggleButton">
                                <Border Name="bor" CornerRadius="3"
                                        BorderBrush="Transparent"
                                        BorderThickness="1" Background="Transparent">
                                    <TextBlock FontSize="20"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"
                                               Text="&#xe67c;"
                                               FontFamily="{StaticResource Iconfont}" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="bor" Property="Background" Value="#10000000" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ResourceDictionary>
        </Grid.Resources>
        <Grid>
            <Grid.Background>
                <VisualBrush TileMode="Tile" Viewport="0,0,40,40" ViewportUnits="Absolute">
                    <VisualBrush.Visual>
                        <Path Data="M0,0 0,40 40,40" Stroke="#F7F9FA" StrokeThickness="1" StrokeDashArray="5,5"></Path>
                    </VisualBrush.Visual>
                </VisualBrush>
            </Grid.Background>
            <Grid.OpacityMask>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="Transparent" Offset="0" />
                    <GradientStop Color="Black" Offset="0.6" />
                </LinearGradientBrush>
            </Grid.OpacityMask>
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="设备组态编辑"
                       Foreground="#FF2C76D8"
                       FontSize="18"
                       Margin="10,10,0,0"
                       HorizontalAlignment="Left" VerticalAlignment="Top" />
            <ScrollViewer Grid.Column="0" Margin="10,40,0,0" VerticalScrollBarVisibility="Hidden">
                <ItemsControl ItemsSource="{Binding ThumbList}" Width="160">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Expander Header="{Binding Header}" IsExpanded="True">
                                <ItemsControl ItemsSource="{Binding Children}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="3"></UniformGrid>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Width="40" Height="40"
                                                    Margin="0,0,0,10"
                                                    Name="bor"
                                                    Background="#eee">
                                                <Border.InputBindings>
                                                    <MouseBinding
                                                        MouseAction="LeftClick"
                                                        Command="{Binding ThumbCommand}"
                                                        CommandParameter="{Binding ElementName=bor}" />
                                                </Border.InputBindings>
                                                <Border ToolTip="{Binding Header}">
                                                    <Border.Background>
                                                        <ImageBrush ImageSource="{Binding Icon}" />
                                                    </Border.Background>
                                                </Border>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Expander>

                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            <!--设备拖拽区域-->
            <ItemsControl Grid.Column="1"
                          AllowDrop="True"
                          Background="Transparent"
                          ItemsSource="{Binding DeviceList}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Drop">
                        <i:InvokeCommandAction
                            PassEventArgsToCommand="True"
                            Command="{Binding DropCommand }" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <ItemsControl.ItemContainerStyle>
                    <Style TargetType="ContentPresenter">
                        <Setter Property="Canvas.Left" Value="{Binding X}" />
                        <Setter Property="Canvas.Top" Value="{Binding Y}" />
                        <Setter Property="Panel.ZIndex" Value="{Binding Z}" />
                    </Style>
                </ItemsControl.ItemContainerStyle>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas Background="Transparent">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="MouseLeftButtonDown">
                                    <i:InvokeCommandAction
                                        Command="{Binding DataContext.DeviceSelectCommand,ElementName=win }" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Canvas>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ContentControl
                            Visibility="{Binding IsVisible,Converter={StaticResource b2v}}"
                            Content="{Binding Path=DeviceType, Converter={StaticResource DeviceConverter}}"
                            Width="{Binding Width }"
                            RenderTransformOrigin="0.5,0.5"
                            Height="{Binding Height}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="MouseLeftButtonDown">
                                    <i:CallMethodAction
                                        MethodName="OnMouseLeftButtonDown"
                                        TargetObject="{Binding}" />
                                    <i:InvokeCommandAction
                                        Command="{Binding DataContext.DeviceSelectCommand,ElementName=win }"
                                        CommandParameter="{Binding}" />
                                </i:EventTrigger>
                                <i:EventTrigger EventName="MouseMove">
                                    <i:CallMethodAction MethodName="OnMouseMove" TargetObject="{Binding}" />
                                </i:EventTrigger>
                                <i:EventTrigger EventName="MouseLeftButtonUp">
                                    <i:CallMethodAction MethodName="OnMouseLeftButtonUp" TargetObject="{Binding}"></i:CallMethodAction>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            <ContentControl.ContextMenu>
                                <ContextMenu ItemsSource="{Binding ContextMenus}"
                                             AlternationCount="100">
                                    <ContextMenu.Resources>
                                        <Style TargetType="Separator">
                                            <Style.Triggers>
                                                <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                                                    <Setter Property="Visibility" Value="Visible"></Setter>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ContextMenu.Resources>
                                </ContextMenu>
                            </ContentControl.ContextMenu>
                        </ContentControl>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <!--通信参数与点位表-->
            <Border Grid.Column="2" Width="200" CornerRadius="5" Background="Transparent" Margin="0,20,10,10"
                    HorizontalAlignment="Right">
                <Grid Margin="10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                        <RowDefinition />
                        <RowDefinition Height="50" />
                    </Grid.RowDefinitions>
                    <Border CornerRadius="3" Margin="-10,0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#996364f8" Offset="0" />
                                <GradientStop Color="#556364f8" Offset="1" />
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                    <Border Background="Gold" Width="4" Height="10" CornerRadius="2"
                            VerticalAlignment="Center" HorizontalAlignment="Left" />
                    <TextBlock Grid.Row="0"
                               VerticalAlignment="Center" Foreground="White"
                               Margin="10,0,0,0">
                        <Run Text="参数配置"></Run>
                        <Run Text="{Binding CurrentDevice.Header,StringFormat= - {0} }"></Run>
                    </TextBlock>
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="50" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0"
                                       HorizontalAlignment="Left"
                                       Text="通信参数"
                                       Foreground="#666"
                                       FontWeight="ExtraBold"
                                       VerticalAlignment="Center" />
                            <Button
                                Grid.Row="0"
                                Width="24"
                                Height="24"
                                Command="{Binding Path=.CurrentDevice.AddPropCommand}"
                                Style="{StaticResource ControlButtonStyle}"
                                HorizontalAlignment="Right">
                                <Path Data="M5 0,5 10M0 5,10 5" Stroke="#FF928C8C" StrokeThickness="2" />
                            </Button>

                            <ItemsControl Grid.Row="1" ItemsSource="{Binding CurrentDevice.DeviceProps}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Height="24">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*" />
                                                <ColumnDefinition Width="1*" />
                                                <ColumnDefinition Width="20" />
                                            </Grid.ColumnDefinitions>
                                            <ComboBox
                                                Name="nameCbb"
                                                Style="{StaticResource PropSelectorStyle}"
                                                DisplayMemberPath="PropHeader"
                                                SelectedValue="{Binding PropName}"
                                                SelectedValuePath="PropName"
                                                ItemsSource="{Binding ElementName=win,Path=DataContext.DevicePropsOptions}" />
                                            <ComboBox Grid.Column="1" Name="valueCbb"
                                                      Style="{StaticResource PropSelectorStyle}"
                                                      SelectedIndex="{Binding ElementName=nameCbb,Path=SelectedItem.DefaultSelectedIndex}"
                                                      SelectedValue="{Binding PropValue}"
                                                      ItemsSource="{Binding ElementName=nameCbb,
                                    Path=SelectedItem.PropValueOptions}"
                                                      Visibility="Collapsed" />
                                            <TextBox Grid.Column="1" Name="valBox" Text="{Binding PropValue}" />
                                            <TextBlock Grid.Column="2"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center">
                                                <Hyperlink
                                                    Command="{Binding ElementName=win,
                                        Path=DataContext.CurrentDevice.DelPropCommand}"
                                                    CommandParameter="{Binding}"
                                                    FontFamily="{StaticResource Iconfont}" TextDecorations="None">
                                                    &#xeca0;
                                                </Hyperlink>
                                            </TextBlock>
                                        </Grid>
                                        <DataTemplate.Triggers>
                                            <DataTrigger Value="1"
                                                         Binding="{Binding ElementName=nameCbb,Path=SelectedItem.PropType}">
                                                <Setter TargetName="valBox" Property="Visibility" Value="Collapsed" />
                                                <Setter TargetName="valueCbb" Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </DataTemplate.Triggers>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <TextBlock Grid.Row="2"
                                       HorizontalAlignment="Left"
                                       Text="点位配置"
                                       Foreground="#666"
                                       FontWeight="ExtraBold"
                                       VerticalAlignment="Center" />
                            <StackPanel Grid.Row="2" Orientation="Horizontal"
                                        VerticalAlignment="Center" HorizontalAlignment="Right">
                                <Button Width="26" Height="26"
                                        Command="{Binding CurrentDevice.AddVariableCommand}"
                                        Style="{StaticResource ControlButtonStyle}"
                                        HorizontalAlignment="Right">
                                    <Path HorizontalAlignment="Center" VerticalAlignment="Center"
                                          Data="M5 0,5 10M0 5,10 5"
                                          Stroke="#FF928C8C" StrokeThickness="2">
                                    </Path>
                                </Button>
                                <Button Style="{StaticResource ControlButtonStyle}"
                                        VerticalAlignment="Center"
                                        FontFamily="{StaticResource Iconfont}"
                                        Content="&#xe664;" />
                            </StackPanel>
                            <Grid Grid.Row="3" TextBlock.Foreground="#888">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition SharedSizeGroup="a" />
                                    <ColumnDefinition SharedSizeGroup="b" />
                                    <ColumnDefinition Width="25" />
                                    <ColumnDefinition Width="25" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="点位名称" HorizontalAlignment="Center"
                                           VerticalAlignment="Center" />
                                <TextBlock Grid.Column="1" Text="地址" HorizontalAlignment="Center"
                                           VerticalAlignment="Center" />
                            </Grid>
                            <ScrollViewer Grid.Row="4" VerticalScrollBarVisibility="Hidden">
                                <ItemsControl ItemsSource="{Binding CurrentDevice.DeviceVariables}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,1" Name="root">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition SharedSizeGroup="a" />
                                                    <ColumnDefinition SharedSizeGroup="b" />
                                                    <ColumnDefinition Width="25" />
                                                    <ColumnDefinition Width="25" />
                                                </Grid.ColumnDefinitions>
                                                <TextBox Grid.Column="0"
                                                         HorizontalContentAlignment="Center"
                                                         Text="{Binding VarName}" />
                                                <TextBox Grid.Column="1"
                                                         HorizontalContentAlignment="Center"
                                                         Text="{Binding VarAddress}" />
                                                <ToggleButton Grid.Column="2"
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"
                                                              Margin="5,0,0,0"
                                                              Name="morePoint"
                                                              Style="{StaticResource MorePointButtonStyle}" />
                                                <Popup
                                                    StaysOpen="False" AllowsTransparency="True"
                                                    Placement="Bottom"
                                                    VerticalOffset="2"
                                                    IsOpen="{Binding ElementName=morePoint,Path=IsChecked }"
                                                    PlacementTarget="{Binding ElementName=root}">
                                                    <Border CornerRadius="5" Padding="5,5" Background="#F7F9FA"
                                                            Width="{Binding ElementName=root,Path=ActualWidth}">
                                                        <Grid Margin="10,3">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="0.7*" />
                                                                <ColumnDefinition />
                                                            </Grid.ColumnDefinitions>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="30" />
                                                                <RowDefinition Height="30" />
                                                                <RowDefinition Height="30" />
                                                            </Grid.RowDefinitions>
                                                            <TextBlock Grid.Row="0" VerticalAlignment="Center"
                                                                       Grid.Column="0" Text="数据类型" />
                                                            <ComboBox Grid.Column="1"
                                                                      Style="{StaticResource PropSelectorStyle}"
                                                                      SelectedValue="{Binding VarType}"
                                                                      Grid.Row="0">
                                                                <ComboBox.ItemsSource>
                                                                    <x:Array Type="sys:String">
                                                                        <sys:String>Boolean</sys:String>
                                                                        <sys:String>Byte</sys:String>
                                                                        <sys:String>UInt16</sys:String>
                                                                        <sys:String>Int16</sys:String>
                                                                        <sys:String>UInt32</sys:String>
                                                                        <sys:String>Int32</sys:String>
                                                                        <sys:String>UInt64</sys:String>
                                                                        <sys:String>Int64</sys:String>
                                                                        <sys:String>Single</sys:String>
                                                                        <sys:String>Double</sys:String>
                                                                    </x:Array>
                                                                </ComboBox.ItemsSource>
                                                            </ComboBox>
                                                            <TextBlock Grid.Row="1" VerticalAlignment="Center"
                                                                       Grid.Column="0" Text="偏移量" />
                                                            <TextBox Grid.Row="1" Grid.Column="1"
                                                                     Text="{Binding Offset}" />
                                                            <TextBlock Grid.Row="2" VerticalAlignment="Center"
                                                                       Grid.Column="0" Text="系数" />
                                                            <TextBox Grid.Row="2" Grid.Column="1"
                                                                     Text="{Binding Modulus}" />
                                                        </Grid>
                                                    </Border>
                                                </Popup>
                                                <TextBlock Grid.Column="3"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center">
                                                    <Hyperlink
                                                        Command="{Binding ElementName=win,
Path=DataContext.CurrentDevice.DelVariableCommand}"
                                                        CommandParameter="{Binding}"
                                                        FontFamily="{StaticResource Iconfont}" TextDecorations="None">
                                                        &#xeca0;
                                                    </Hyperlink>
                                                </TextBlock>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>

                            <TextBlock Grid.Row="5" Text="其他配置" VerticalAlignment="Center"
                                       Foreground="#666"
                                       FontWeight="ExtraBold" />
                            <ToggleButton Grid.Row="6" Height="30"
                                          FontSize="14"
                                          Name="manualBtn"
                                          HorizontalContentAlignment="Stretch"
                                          Style="{StaticResource ManualToggleButtonStyle}">
                                <Grid>
                                    <TextBlock HorizontalAlignment="Left" Text="手动控制选项" />
                                    <TextBlock FontFamily="{StaticResource Iconfont}" Text="&#xe673;"
                                               HorizontalAlignment="Right" />
                                </Grid>
                            </ToggleButton>
                            <Button FontSize="14" Tag="3" Height="30"
                                    Command="{Binding OpenAlarmConditionDialog}"
                                    HorizontalContentAlignment="Stretch" Grid.Row="7"
                                    Style="{StaticResource ControlButtonStyle}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="30" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="变量报警选项" HorizontalAlignment="Left" />
                                    <TextBlock Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center"
                                               Text="&#xe673;" FontFamily="{StaticResource Iconfont}" />
                                </Grid>
                            </Button>
                            <Button FontSize="14" Height="30" Tag="3" 
                                    Command="{Binding OpenUnionConditionDialog}"
                                    HorizontalContentAlignment="Stretch" Grid.Row="8"
                                    Style="{StaticResource ControlButtonStyle}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="30" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="自动联动选项" HorizontalAlignment="Left" />
                                    <TextBlock Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center"
                                               Text="&#xe673;" FontFamily="{StaticResource Iconfont}" />
                                </Grid>
                            </Button>
                        </Grid>
                    </ScrollViewer>

                </Grid>
            </Border>
        </Grid>
        <Border Name="successBox" VerticalAlignment="Top" Padding="10,0" HorizontalAlignment="Center"
                Margin="0,-80,0,0"
                CornerRadius="5" Height="40"
                Width="200" Background="#EEFFFFFF">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" Color="#DDD" ShadowDepth="0" Opacity="0.3" />
            </Border.Effect>
            <StackPanel Orientation="Horizontal" Margin="10,0" VerticalAlignment="Center">
                <TextBlock Text="&#xe615;"
                           VerticalAlignment="Center"
                           Foreground="LightGreen" FontSize="20"
                           Margin="10,0"
                           FontFamily="{StaticResource Iconfont}" />
                <TextBlock Text="组态数据保存完成！"
                           Foreground="ForestGreen" FontWeight="Normal"
                           VerticalAlignment="Center" />
            </StackPanel>
        </Border>
        <Border Name="failedBox" Margin="0,-80,0,0"
                CornerRadius="6"
                Padding="0,5"
                Background="#EEFFFFFF"
                Width="230" MinHeight="40"
                VerticalAlignment="Top" HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" Color="#DDD" ShadowDepth="0" Opacity="0.3" />
            </Border.Effect>
            <Grid Margin="10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="30" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                           Text="&#xe663;" FontSize="20" VerticalAlignment="Center"
                           Foreground="OrangeRed"
                           FontFamily="{StaticResource Iconfont}" />
                <TextBlock Grid.Column="1"
                           Foreground="#555"
                           TextWrapping="Wrap"
                           VerticalAlignment="Center"
                           Text="{Binding SaveFailedMsg,StringFormat=保存失败，异常：{0}}" />
                <Button Grid.Column="2"
                        FontSize="16"
                        Command="{Binding CloseFailedBoxCommand}"
                        Foreground="OrangeRed"
                        CommandParameter="{Binding ElementName=win}"
                        Style="{StaticResource ControlButtonStyle}"
                        VerticalAlignment="Center"
                        Content="&#xeca0;" FontFamily="{StaticResource Iconfont}" />
            </Grid>
        </Border>
        <Border VerticalAlignment="Bottom" HorizontalAlignment="Center"
                Margin="0,0,0,30"
                CornerRadius="5">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#fff" Offset="0" />
                    <GradientStop Color="#ccc" Offset="1" />
                </LinearGradientBrush>
            </Border.Background>
            <Grid TextBlock.FontSize="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Tag="5,0,5,0"
                        Command="{Binding SaveCommand}"
                        CommandParameter="{Binding ElementName=win}"
                        Style="{StaticResource ButtonStyle}">
                    <Border Padding="5">
                        <StackPanel>
                            <TextBlock FontSize="16" HorizontalAlignment="Center" Text="&#xec09;"
                                       FontFamily="{StaticResource Iconfont}" />
                            <TextBlock Text="保存" />
                        </StackPanel>
                    </Border>
                </Button>
                <Button Grid.Column="1" Tag="5,0,5,0" Command="{Binding CloseCommand}"
                        CommandParameter="{Binding ElementName=win}"
                        Style="{StaticResource ButtonStyle}">
                    <Border Padding="5">
                        <StackPanel>
                            <TextBlock FontSize="16" HorizontalAlignment="Center" Text="&#xe60a;"
                                       FontFamily="{StaticResource Iconfont}" />
                            <TextBlock Text="退出" />
                        </StackPanel>
                    </Border>
                </Button>
            </Grid>
        </Border>

        <Popup Placement="Left" 
               AllowsTransparency="True"
               HorizontalOffset="-15"
               StaysOpen="False" IsOpen="{Binding ElementName=manualBtn,Path=IsChecked}"
               PlacementTarget="{Binding ElementName=manualBtn}">
            <Border Background="#eee" Width="250" CornerRadius="5" >
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" Color="#ddd" ShadowDepth="0" Opacity="0.4"></DropShadowEffect>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Canvas>
                        <Path Data="M0 0 8 5 0 10" Fill="#F7F9FA" Canvas.Top="0" Canvas.Right="0" Margin="0,9,-10,0"/>
                    </Canvas>
                    <TextBlock Margin="5,0,0,0" FontSize="12" FontWeight="ExtraBlack" VerticalAlignment="Center" Grid.Row="0" Text="手动控制选项" HorizontalAlignment="Left"/>
                    <Button Margin="5,0" VerticalAlignment="Center" Grid.Row="0" Command="{Binding CurrentDevice.AddManualControlCommand}"
                            HorizontalAlignment="Right" Content="&#xe607;" FontFamily="{StaticResource Iconfont}" 
                            Style="{StaticResource ControlButtonStyle}"/>
                    <Grid Grid.Row="1" Background="#fff">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.2*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="40"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="控制名称" 
                                       VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="控制地址" 
                                       VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="2" Text="写入数据" 
                                       VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="3" Text="操作" 
                                       VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Grid>
                        <ItemsControl Grid.Row="1" ItemsSource="{Binding CurrentDevice.ManualControls}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="5,0,5,5">
                                         <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1.2*"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="40"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0" Text="{Binding ControlHeader}" VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="1" Text="{Binding ControlAddress}" VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="2" Text="{Binding Value}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <Hyperlink TextDecorations="None" 
                                                       CommandParameter="{Binding}"
                                                       Command="{Binding RelativeSource={RelativeSource AncestorType=Window},
                                                Path=DataContext.CurrentDevice.DelManualControlCommand}">删除</Hyperlink>
                                        </TextBlock>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Grid>
            </Border>
        </Popup>
    </Grid>

</Window>