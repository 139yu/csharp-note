<UserControl x:Class="Nobody.DigitaPlatform.Views.Pages.TrendPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Nobody.DigitaPlatform.Views.Pages"
             mc:Ignorable="d"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:converter="clr-namespace:Nobody.DigitaPlatform.Common.Converter;assembly=Nobody.DigitaPlatform.Common"
             DataContext="{Binding Source={StaticResource Locator},Path=TrendViewModel}"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="pack://application:,,,/Nobody.DigitaPlatform.Assets;component/Styles/ButtonStyle.xaml">
                </ResourceDictionary>
                <ResourceDictionary>
                    <converter:FocuseToSelectedConverter x:Key="ftc"/>
                    <Style TargetType="ToggleButton" x:Key="ShowLegendButtonStyle">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ToggleButton">
                                    <Border CornerRadius="3" Name="br" Padding="10,5" BorderBrush="#eee"
                                            BorderThickness="1"
                                            Background="#F7F9FA">
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <Border Margin="0,0,5,0" Name="point" Width="8" Height="8"
                                                    VerticalAlignment="Center" CornerRadius="5" Background="#ddd" />
                                            <TextBlock Name="txt" Foreground="#999"
                                                       Text="{TemplateBinding Content}" VerticalAlignment="Center" />
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="point" Property="Background" Value="orange" />
                                            <Setter TargetName="txt" Property="Foreground" Value="#444" />
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="br" Property="Background" Value="#eee"></Setter>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Border Grid.Row="0" BorderBrush="#eee" BorderThickness="0,0,0,1"/>
        <Border Background="#5FFF" Grid.Row="1" CornerRadius="0,0,5,5" />
        <Border Grid.Row="0" Height="15" Width="3" Background="Gold" VerticalAlignment="Center"
                HorizontalAlignment="Left" />
        <TextBlock Grid.Row="0" Text="实时趋势曲线跟踪"
                   Foreground="#AA409EFE" FontWeight="Normal" FontSize="18"
                   VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0">
            <TextBlock.Effect>
                <DropShadowEffect Color="#fff" ShadowDepth="0" BlurRadius="10" Opacity="0.8"></DropShadowEffect>
            </TextBlock.Effect>
        </TextBlock>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Style="{StaticResource InfoButton}" Command="{Binding ShowDeviceVarDialogCommand }" Margin="0,0,10,0" Content="选择设备变量" />
            <Button Style="{StaticResource InfoButton}" Command="{Binding ShowAxisDialogCommand}" Margin="0,0,10,0" Content="纵轴编辑" />
            <Button Style="{StaticResource InfoButton}" Command="{Binding SaveTrend}" Margin="0,0,10,0" Width="130">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock VerticalAlignment="Center" Margin="0,0,5,0" FontFamily="{StaticResource Iconfont}"
                               Text="&#xec09;" />
                    <TextBlock Text="保存所有配置"></TextBlock>
                </StackPanel>
            </Button>
            <Button Style="{StaticResource PrimaryButton}" Command="{Binding AddTrendCommand}"
                    HorizontalAlignment="Right" Width="135">
                <StackPanel Orientation="Horizontal" Margin="0,0,5,0" VerticalAlignment="Center">
                    <TextBlock VerticalAlignment="Center" FontFamily="{StaticResource Iconfont}" Text="&#xe607;" />
                    <TextBlock Text="新建趋势图" />
                </StackPanel>
            </Button>
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="140" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0"  Name="chart">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Border Grid.Row="0" CornerRadius="5" Margin="5,0" Background="#A9CFF9" />
                <TextBlock Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"
                           FontWeight="Normal" Foreground="#fff" Text="{Binding CurrentTrend.TrendHeader}" />
                <Border Grid.Row="1" Margin="5" Background="#FCFCFD" CornerRadius="5">
                    <Border.Effect>
                        <DropShadowEffect Color="Gray" BlurRadius="10" ShadowDepth="0" Opacity="0.1" />
                    </Border.Effect>
                    <lvc:CartesianChart 
                        AxisX="{Binding CurrentTrend.XAxis}"
                        Series="{Binding CurrentTrend.ChartSeries}"
                        LegendLocation="{Binding CurrentTrend.LegendLocation}"
                        AxisY="{Binding CurrentTrend.YAxis}" />
                </Border>
            </Grid>
            <!--根据对象导出图例，不需要按钮-->
            <StackPanel Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Right" Orientation="Horizontal">
                <ToggleButton Content="显示图例" IsChecked="{Binding CurrentTrend.IsShowLegend}" Margin="0,5,10,0" Style="{StaticResource ShowLegendButtonStyle}" />
                <Button Style="{StaticResource WarringButton}" Command="{Binding SaveToImageCommand}"
                        Margin="0,5,10,0" CommandParameter="{Binding ElementName=chart}">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Margin="0,0,5,0" FontFamily="{StaticResource Iconfont}" VerticalAlignment="Center"
                                   Text="&#xec09;" />
                        <TextBlock Text="导出图像" />
                    </StackPanel>
                </Button>
            </StackPanel>
            <Border Grid.Column="1" Margin="5,0,0,5" Background="#DFFF" CornerRadius="3">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" ShadowDepth="0" BlurRadius="5" Opacity="0.1" />
                </Border.Effect>
                <ListBox ItemsSource="{Binding TrendModels}"  Name="lb"
                         ScrollViewer.HorizontalScrollBarVisibility="Hidden" Background="Transparent"
                         SelectedItem="{Binding CurrentTrend}">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="IsSelected" Value="{Binding IsSelected}" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border Background="#fff" Name="br" Height="28" CornerRadius="2" Margin="2">
                                            <ContentPresenter VerticalAlignment="Center" />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="br" Property="Background" Value="#ddd" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="30" />
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" FontSize="12" Foreground="#666" BorderThickness="0" VerticalContentAlignment="Center"
                                         VerticalAlignment="Center" Style="{x:Null}" Background="{x:Null}" Margin="5,0"
                                         Visibility="{Binding RelativeSource={RelativeSource Self},Converter={StaticResource ftc}}"
                                         Tag="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}}"
                                         Text="{Binding TrendHeader,UpdateSourceTrigger=PropertyChanged}" />
                                <Button Grid.Column="1" Content="&#xeca0;" FontSize="10" Width="20" Height="20"
                                        CommandParameter="{Binding}"
                                        Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl},Path=DataContext.DelTrendCommand}"
                                        FontFamily="{StaticResource Iconfont}" Style="{StaticResource ControlButtonStyle}">
                                </Button>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>
        </Grid>
    </Grid>
</UserControl>