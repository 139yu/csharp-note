<UserControl x:Class="Project.BMS.Views.Pages.MonitorPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Project.BMS.Views.Pages"
             mc:Ignorable="d"
             FontSize="14"
             DataContext="{Binding}"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="Border" x:Key="BoardStyle">
            <Setter Property="Margin" Value="5" />
            <Setter Property="CornerRadius" Value="5" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="5"
                        Color="Gray"
                        ShadowDepth="0"
                        Opacity="0.1"
                        Direction="0" />
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="90" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock VerticalAlignment="Center" Text="DASHBOARD"
                   FontSize="20" FontWeight="Bold" />
        <UniformGrid Grid.Row="1" Rows="1">
            <Border Style="{StaticResource BoardStyle}"
                    Background="#E3EFFC">
                <Grid ClipToBounds="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Text="&#xe639;"
                        FontSize="30"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        FontFamily="../../Assets/Fonts/#iconfont" Foreground="#FF2EBEDA">
                    </TextBlock>
                    <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center">
                        <TextBlock Text="Soc" Foreground="#999" />
                        <TextBlock Foreground="#FF277CD8">
                            <Run FontSize="20">100</Run>
                            <Run>%</Run>
                        </TextBlock>
                    </StackPanel>
                    <TextBlock Grid.Column="1"
                               VerticalAlignment="Bottom"
                               HorizontalAlignment="Right"
                               Foreground="#0F000000"
                               Margin="0,0,5,-20"
                               FontSize="50"
                               Text="Soc" />
                </Grid>
            </Border>
            <Border Style="{StaticResource BoardStyle}" Background="#E4E8FB">
                <Grid ClipToBounds="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Text="&#xe640;"
                        FontSize="30"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        FontFamily="../../Assets/Fonts/#iconfont" Foreground="#FF71A5BB">
                    </TextBlock>
                    <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center">
                        <TextBlock Text="电压" Foreground="#999" />
                        <TextBlock Foreground="#FF277CD8">
                            <Run FontSize="20">100</Run>
                            <Run>V</Run>
                        </TextBlock>
                    </StackPanel>
                    <TextBlock Grid.Column="1"
                               VerticalAlignment="Bottom"
                               HorizontalAlignment="Right"
                               Foreground="#0F000000"
                               Margin="0,0,5,-20"
                               FontSize="50"
                               Text="Voltage" />
                </Grid>
            </Border>
            <Border Style="{StaticResource BoardStyle}" Background="#FFBFE6D9">
                <Grid ClipToBounds="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Text="&#xe654;"
                        FontSize="30"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        FontFamily="../../Assets/Fonts/#iconfont" Foreground="#28D89D">
                    </TextBlock>
                    <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center">
                        <TextBlock Text="电流" Foreground="#999" />
                        <TextBlock Foreground="#FF277CD8">
                            <Run FontSize="20">100</Run>
                            <Run>A</Run>
                        </TextBlock>
                    </StackPanel>
                    <TextBlock Grid.Column="1"
                               VerticalAlignment="Bottom"
                               HorizontalAlignment="Right"
                               Foreground="#0F000000"
                               Margin="0,0,5,-20"
                               FontSize="50"
                               Text="Current" />
                </Grid>
            </Border>
            <Border Style="{StaticResource BoardStyle}" Background="#E3EFFC">
                <Grid ClipToBounds="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Text="&#xe67a;"
                        FontSize="30"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        FontFamily="../../Assets/Fonts/#iconfont" Foreground="#FF39A796">
                    </TextBlock>
                    <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center">
                        <TextBlock Text="电量" Foreground="#999" />
                        <TextBlock Foreground="#FF277CD8">
                            <Run FontSize="20">100</Run>
                            <Run>KW</Run>
                        </TextBlock>
                    </StackPanel>
                    <TextBlock Grid.Column="1"
                               VerticalAlignment="Bottom"
                               HorizontalAlignment="Right"
                               Foreground="#0F000000"
                               Margin="0,0,5,-20"
                               FontSize="50"
                               Text="Power" />
                </Grid>
            </Border>
            <Border Style="{StaticResource BoardStyle}" Background="#F2EDEF">
                <Grid ClipToBounds="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Text="&#xfbf8;"
                        FontSize="30"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        FontFamily="../../Assets/Fonts/#iconfont" Foreground="#FFDE236E">
                    </TextBlock>
                    <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center">
                        <TextBlock Text="SoH" Foreground="#999" />
                        <TextBlock Foreground="#FF277CD8">
                            <Run FontSize="20">100</Run>
                            <Run>%</Run>
                        </TextBlock>
                    </StackPanel>
                    <TextBlock Grid.Column="1"
                               VerticalAlignment="Bottom"
                               HorizontalAlignment="Right"
                               Foreground="#0F000000"
                               Margin="0,0,5,-20"
                               FontSize="50"
                               Text="SoH" />
                </Grid>
            </Border>
        </UniformGrid>
        <Border Grid.Row="2" Padding="10,0" Background="#FFF" Style="{StaticResource BoardStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition />
                    <RowDefinition Height="200" />
                </Grid.RowDefinitions>
                <TextBlock
                    VerticalAlignment="Center"
                    Text="电池组"
                    FontSize="18"
                    FontWeight="Bold"
                    HorizontalAlignment="Left"
                    Grid.Column="0"
                    Grid.Row="0" />
                <StackPanel Grid.Column="1" Grid.Row="0"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right">
                    <Border VerticalAlignment="Center"
                            Margin="5"
                            Background="#FF7EDA25"
                            Height="12" Width="12"
                            CornerRadius="6" />
                    <TextBlock VerticalAlignment="Center" Text="状态"></TextBlock>
                    <Border VerticalAlignment="Center"
                            Margin="5"
                            Background="#FF7EDA25"
                            Height="12" Width="12"
                            CornerRadius="6" />
                    <TextBlock VerticalAlignment="Center" Text="状态"></TextBlock>
                    <Border VerticalAlignment="Center"
                            Margin="5"
                            Background="#FF7EDA25"
                            Height="12" Width="12"
                            CornerRadius="6" />
                    <TextBlock VerticalAlignment="Center" Text="状态"></TextBlock>
                </StackPanel>
                <ListBox
                    SelectedIndex="0"
                    Name="BatteryGroup"
                    Grid.Row="1"
                    Grid.RowSpan="2"
                    Grid.Column="0"
                    BorderThickness="0,0,1,0"
                    BorderBrush="#cccc"
                    ScrollViewer.VerticalScrollBarVisibility="Hidden"
                    ItemsSource="{Binding BatteryItems}">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border Name="root"
                                                BorderThickness="0,0,0,1"
                                                BorderBrush="#eeee"
                                                Padding="0,5"
                                                Background="Transparent">
                                            <ContentPresenter />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter
                                                    TargetName="root"
                                                    Property="Background"
                                                    Value="#05000000" />
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter
                                                    Value="#112BC766"
                                                    Property="Background"
                                                    TargetName="root" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30" />
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="60" />
                                    <ColumnDefinition Width="60" />
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0"
                                        VerticalAlignment="Top"
                                        Margin="5"
                                        Background="#FF7EDA25"
                                        Height="10" Width="10"
                                        CornerRadius="6" />
                                <StackPanel
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Grid.Column="1">
                                    <TextBlock Margin="0,0,0,5" Text="电池组#1" />
                                    <TextBlock Text="{Binding}" />
                                </StackPanel>
                                <StackPanel
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center" Grid.Column="2">
                                    <TextBlock Margin="0,0,0,5">
                                        <Run>12.3</Run>
                                        <Run Foreground="#999" FontSize="10">KW</Run>
                                    </TextBlock>
                                    <TextBlock Text="电量" Foreground="#999" />
                                </StackPanel>
                                <StackPanel
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center" Grid.Column="3"
                                    Orientation="Vertical">
                                    <TextBlock Margin="0,0,0,5">
                                        <Run>12.3</Run>
                                        <Run Foreground="#999" FontSize="10">°C</Run>
                                    </TextBlock>
                                    <TextBlock Text="温度" Foreground="#999" />
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <ItemsControl Grid.Column="1" Grid.Row="1"
                              Foreground="#fff"
                              FontSize="12"
                              ItemsSource="{Binding ElementName=BatteryGroup,Path=SelectedItem}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel></WrapPanel>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Height="100" Width="60"
                                  Margin="5,5,5,3">
                                <Border Width="27"
                                        Height="8"
                                        VerticalAlignment="Top"
                                        Background="#882BC766"
                                        CornerRadius="5,5,0,0" />
                                <Border
                                    Margin="0,8,0,0"
                                    CornerRadius="5"
                                    Background="#882BC766">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <TextBlock
                                            Grid.Row="0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Text="#0001">
                                        </TextBlock>
                                        <Border
                                            Margin="0,0,0,5"
                                            Padding="5,0"
                                            Grid.Row="1"
                                            Background="#33000000">
                                            <Grid>
                                                <TextBlock Text="3.91"
                                                           VerticalAlignment="Center" />
                                                <TextBlock
                                                    VerticalAlignment="Center"
                                                    Text="V"
                                                    HorizontalAlignment="Right" />
                                            </Grid>
                                        </Border>
                                        <Border
                                            Padding="5,0"
                                            Margin="0,0,0,5"
                                            Grid.Row="2"
                                            Background="#33000000">
                                            <Grid>
                                                <TextBlock Text="3.91"
                                                           VerticalAlignment="Center" />
                                                <TextBlock
                                                    VerticalAlignment="Center"
                                                    Text="V"
                                                    HorizontalAlignment="Right" />
                                            </Grid>
                                        </Border>
                                        <Border
                                            Padding="5,0"
                                            Margin="0,0,0,5"
                                            Grid.Row="3"
                                            Background="#33000000">
                                            <Grid>
                                                <TextBlock Text="3.91"
                                                           VerticalAlignment="Center" />
                                                <TextBlock
                                                    VerticalAlignment="Center"
                                                    Text="A"
                                                    HorizontalAlignment="Right" />
                                            </Grid>
                                        </Border>
                                        <TextBlock Grid.Row="4" HorizontalAlignment="Center">
                                            <Hyperlink TextDecorations="None" Foreground="#FF1CB1F3">详情</Hyperlink>
                                        </TextBlock>
                                    </Grid>
                                </Border>

                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <GridSplitter Grid.Row="1" Grid.Column="1"
                              Height="10"
                              Margin="5,0"
                              Background="IndianRed"
                              VerticalAlignment="Bottom"
                              HorizontalAlignment="Stretch" Cursor="SizeNS">
                </GridSplitter>
                <Grid Grid.Column="1" Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Margin="5,0">
                        <TextBlock 
                            Text="消息日志" 
                            VerticalAlignment="Center" 
                            HorizontalAlignment="Left"/>
                        <TextBlock 
                            VerticalAlignment="Center" 
                            HorizontalAlignment="Right">
                            <Hyperlink TextDecorations="None">查看详情</Hyperlink>
                        </TextBlock>
                    </Grid>
                    <ScrollViewer Grid.Row="1"
                        Margin="5,0,5,5"
                        VerticalScrollBarVisibility="Hidden">
                        <!--AlternationCount=2：两条记录为一组-->
                        <!--配合触发器ItemsControl.AlternationIndex-->
                        <ItemsControl
                            AlternationCount="2"
                            ItemsSource="{Binding BatteryMessages}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="5"
                                            Name="root"
                                            CornerRadius="3"
                                            Background="Transparent">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120" />
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="50" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0"
                                                       Foreground="#999"
                                                       VerticalAlignment="Center"
                                                       Text="2025-06-22 14:22" />
                                            <TextBlock Grid.Column="1"
                                                       VerticalAlignment="Center"
                                                       Text="启动完成，通信连接正常" />
                                            <TextBlock Grid.Column="2"
                                                       VerticalAlignment="Center"
                                                       Foreground="#999"
                                                       Text="紧急" />
                                        </Grid>
                                    </Border>
                                    <DataTemplate.Triggers>
                                        <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                                            <Setter TargetName="root" Property="Background" Value="#10000000"></Setter>
                                        </Trigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>


            </Grid>
        </Border>
    </Grid>
</UserControl>